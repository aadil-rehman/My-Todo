<%- include("partials/header.ejs") %>
<div class = "container">
	<h1>My Todo </h1>

	<form id = "task-box" action="/" method="post">
		<input  type="text" name="task" placeholder="Creat a new todo" required />
		<button type="submit">Create</button>
	</form>

	<ul class="list">
		<% for(let i = todos.length-1; i >= 0; i--){ %>
		<li class="list-item">
			<input data-taskid="<%= todos[i].id %>" class="checkbox" type="checkbox" name="todo" />
			<span><%= todos[i].name %></span>
		</li>
		<% } %>
	</ul>
</div>

